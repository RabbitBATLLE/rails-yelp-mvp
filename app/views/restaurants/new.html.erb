<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name, :label => 'Enter the name of the restaurante' %>
  <%= f.input :address, :label => 'Where is the restaurant?' %>
  <%= f.input :phone_number, :label => 'What is its phone number?' %>
  <%= f.input :category, :label => 'Which type of food?' %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
  <%= f.button :submit %>
<% end %>
